@model List<TenorApiProject.Models.TenorGifModel>

<h2>Search Tenor GIFs</h2>

<form asp-action="Search" method="post">
    <input type="text" name="query" placeholder="Search for GIFs..." />
    <button type="submit">Search</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @Html.Raw(ViewBag.Error)
    </div>
}


@if (Model != null && Model.Any())
{
    <div>
        @foreach (var gif in Model)
        {
            <div style="margin:10px 0;">
                <h3>@gif.Title</h3>
                <img src="@gif.PreviewUrl" alt="@gif.Title" />
                <p><a href="@gif.Url" target="_blank">Full GIF</a></p>
            </div>
        }
    </div>
}
else if (ViewBag.Error == null)  // no error, but also no results yet
{
    <p style="margin-top:15px;">Enter a keyword above to search for GIFs.</p>
}
